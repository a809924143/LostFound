<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品简述:"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Lost_briefdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入物品简单描述"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_height="1dip"
                android:layout_marginVertical="3dp"
                android:background="#CCCCCC"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品详细描述:"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Lost_detaileddescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入物品详细描述"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_height="1dip"
                android:layout_marginVertical="3dp"
                android:background="#CCCCCC"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="丢失地点和时间:"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Lost_lostlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="丢失地点和时间"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_height="1dip"
                android:layout_marginVertical="3dp"
                android:background="#CCCCCC"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请上传图片:"
                android:textColor="#000"
                android:textSize="20dp" />


            <ImageView
                android:id="@+id/Lost_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/icon_picture"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"/>

            <Button
                android:id="@+id/Lost_FoundInfo_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="提交信息" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>